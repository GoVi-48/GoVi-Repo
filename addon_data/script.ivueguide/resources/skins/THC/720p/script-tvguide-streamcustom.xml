<?xml version="1.0" encoding="utf-8"?>
<window type="dialog">
    <allowoverlay>no</allowoverlay>
    <defaultcontrol always="true">1000</defaultcontrol>
    <coordinates>
        <system>1</system>
        <posx>320</posx>
        <posy>175</posy>
    </coordinates>
    <animation effect="fade" start="0" end="100" time="250">WindowOpen</animation>
    <animation effect="fade" start="100" end="0" time="250">WindowClose</animation>
    <controls>
        <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>640</width>
            <height>356</height>
            <texture>main.png</texture>
        </control>


			
        <control type="label" id="4000">
            <posx>20</posx>
            <posy>22</posy>
            <width>600</width>
            <height>80</height>
            <textcolor>ffffffff</textcolor>
            <font>font13</font>
            <align>center</align>
            <label>[B]$ADDON[script.ivueguide 30700][/B]</label>
            <wrapmultiline>true</wrapmultiline>
        </control>

        <control type="fixedlist" id="1000">
            <posx>20</posx>
            <posy>100</posy>
            <width>600</width>
            <height>250</height>
            <viewtype label="list">list</viewtype>
            <orientation>vertical</orientation>
            <focusposition>0</focusposition>

            <itemlayout width="600" height="60">
                <control type="image"> <!-- No-Focus Box -->
                    <posx>5</posx>
                    <posy>5</posy>
                    <width>590</width>
                    <height>60</height>
                    <texture>tvguide-program-grey.png</texture>
                </control>
                <control type="image"> <!-- No-Focus Image -->
                    <posx>15</posx>
                    <posy>15</posy>
                    <width>40</width>
                    <height>40</height>
                    <info>ListItem.Icon</info>
                </control>
                <control type="image"> <!-- No-Focus Image2 -->
                    <posx>545</posx>
                    <posy>15</posy>
                    <width>40</width>
                    <height>40</height>
                    <info>ListItem.Icon</info>
                </control>
                <control type="label"> <!-- No-Focus Label -->
                    <posx>5</posx>
                    <posy>15</posy>
                    <width>590</width>
                    <height>40</height>
                    <align>center</align>
                    <font>font13</font>
                    <textcolor>ffffffff</textcolor>
                    <label>$INFO[ListItem.Label]</label>
                </control>
            </itemlayout>
            <focusedlayout width="600" height="60">
                <control type="image"> <!-- Focus Box -->
                    <posx>5</posx>
                    <posy>5</posy>
                    <width>590</width>
                    <height>60</height>
                    <texture>tvguide-program-grey-focus.png</texture>
                    <visible>Control.HasFocus(1000)</visible>
                </control>
                <control type="image"> <!-- Focus Image -->
                    <posx>6</posx>
                    <posy>6</posy>
                    <width>58</width>
                    <height>58</height>
                    <info>ListItem.Icon</info>
                </control>
                <control type="image"> <!-- Focus Image2 -->
                    <posx>536</posx>
                    <posy>6</posy>
                    <width>58</width>
                    <height>58</height>
                    <info>ListItem.Icon</info>
                </control>
                <control type="label"> <!-- Focus Label -->
                    <posx>5</posx>
                    <posy>15</posy>
                    <width>590</width>
                    <height>40</height>
                    <align>center</align>
                    <font>font13</font>
                    <textcolor>ffffffff</textcolor>
                    <label>$INFO[ListItem.Label]</label>
                </control>
            </focusedlayout>
        </control>
    </controls>
</window>