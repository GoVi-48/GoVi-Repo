<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addons>

<!-- Program Ivue TV Guide -->
	<addon id="script.ivueguide" name="Ivue TV Guide" version="4.2.10" provider-name="iVue Tv Guide">
		<requires>
			<import addon="xbmc.python" version="2.1.0"/>
			<import addon="script.module.simplejson" version="2.0.10"/>
		</requires>
		<extension point="xbmc.python.script" library="addon.py"/>
		<extension point="xbmc.service" library="service.py" start="login"/>
		<extension point="xbmc.addon.metadata">
		<provides>video</provides>
			<description lang="en">Final Final Final ISH Release of Ivue Guide, simple free and effective, We hope you like it now with category intergration #teamiVue, Huge thanks to all coders out there for getting involved.</description>
			<disclaimer lang="en">Final Release of Ivue Guide and is forked and based on FTV Guide, Dixie , Ivue ,Primeval, tommy winthers original code, </disclaimer>
		</extension>
	</addon>
	
	<addon id="plugin.video.IVUEcreator"
	version="0.3.9"
	name="IVUEcreator"
	provider-name="Team IVUE">
	<requires>
	  <import addon="xbmc.python" version="2.20.0"/>
	  <import addon="script.module.xbmcswift2" version="2.4.0"/>
	  <import addon="script.module.requests" version="2.9.1" />
	</requires>
	<extension point="xbmc.python.pluginsource" library="main.py">
	  <provides>video</provides>
	</extension>
	<extension point="xbmc.addon.metadata">
	  <summary lang="en">IVUECreator</summary>
	  <description lang="en">Integrate any plugin installed to IVUE guide easily and quickly</description>
	  <description lang="en">Now includes a fully functioning back up and restore feature</description>
	  <disclaimer lang="en">Modified by TeamJDM from the original code from "Primeaval" </disclaimer>
	</extension>
	</addon>
		
	<addon id="plugin.video.intervue" name="InterVUE" version="1.0.5" provider-name="[B]subTeam[/B]">
	  <requires>
		<import addon="xbmc.python" version="2.1.0"/>
	  </requires>
	  <extension point="xbmc.python.script" library="main.py"> 
	  </extension>
	  <extension point="xbmc.addon.metadata">
		<summary lang="en"></summary>
		<description lang="en"></description>
		<platform>all</platform>
	  </extension>
	</addon>
	
	<addon id="script.iVueSkins" name="iVue2 Skins" version="1.0.3" provider-name="retrorat1">
	  <requires>
		<import addon="xbmc.python" version="2.1.0"/>
	  </requires>
	  <extension point="xbmc.python.pluginsource" library="default.py">
			<provides>executable</provides>
	  </extension>
	  <extension point="xbmc.addon.metadata">
		<summary lang="en">iVue2 Skins</summary>
		<description lang="en">This is the place to find all Ivue2 TV Guide Skins Thanks to all authors of the code</description>
		<platform>all</platform>
	  </extension>
	</addon>	
	
</addons>