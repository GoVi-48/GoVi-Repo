<?xml version="1.0" encoding="UTF-8"?>
<window>
	<zorder>3</zorder>
	<controls>
		<control type="group">
			<depth>DepthMax</depth>
			<top>63</top>
			<right>-80</right>
			<width>750</width>
			<animation type="WindowOpen">
				<effect type="fade" start="0" end="100" time="300" tween="sine" easing="out" />
				<effect type="slide" start="320" end="0" time="400" tween="cubic" easing="out" />
			</animation>
			<animation type="WindowClose">
				<effect type="fade" start="100" end="0" time="300" delay="3000" tween="sine" easing="out" />
				<effect type="slide" start="0" end="320" time="300" delay="3000"  tween="cubic" easing="out" />
			</animation>
			<visible>String.IsEmpty(Window(Home).Property(script.cinemavision.running))</visible>
			<control type="image">
				<left>-80</left>
				<top>-50</top>
				<width>1000</width>
				<height>250</height>
				<texture>dialogs/default/bg.png</texture>
				<bordertexture border="21">overlays/shadow.png</bordertexture>
				<bordersize>20</bordersize>
			</control>
			<control type="image" id="400">
				<description>avatar</description>
				<left>25</left>
				<top>25</top>
				<width>110</width>
				<height>110</height>
				<aspectratio>stretch</aspectratio>
			</control>
			<control type="fadelabel" id="401">
				<description>Line 1 Label</description>
				<left>150</left>
				<top>40</top>
				<width>500</width>
				<height>18</height>
				<font>font15_title</font>
				<textcolor>$VAR[ThemeLabelColor]</textcolor>
				<aligny>center</aligny>
				<scrollout>false</scrollout>
				<pauseatend>2000</pauseatend>
			</control>
			<control type="fadelabel" id="402">
				<description>Line 2 Label</description>
				<left>151</left>
				<top>68</top>
				<width>500</width>
				<height>60</height>
				<font>font13_title</font>
				<textcolor>grey</textcolor>
				<aligny>center</aligny>
				<scrollout>false</scrollout>
				<pauseatend>2000</pauseatend>
			</control>
		</control>
	</controls>
</window>
